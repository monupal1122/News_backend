<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Chronicle Admin | Production Backend</title>
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            /* Modern Indigo/Violet Theme */
            --primary-bg: #1e1b4b;
            /* Deep Indigo */
            --sidebar-width: 280px;
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: rgba(226, 232, 240, 0.8);
            --primary-color: #4f46e5;
            /* Indigo 600 */
            --primary-gradient: linear-gradient(135deg, #4f46e5, #7c3aed);
            --secondary-gradient: linear-gradient(135deg, #3b82f6, #06b6d4);
            --danger-gradient: linear-gradient(135deg, #ef4444, #f43f5e);
            --text-main: #0f172a;
            --text-muted: #64748b;
        }

        body {
            background-color: #f1f5f9;
            font-family: 'Inter', sans-serif;
            color: var(--text-main);
            min-height: 100vh;
            -webkit-font-smoothing: antialiased;
        }

        /* Modern Card Style */
        .glass-card {
            background: #ffffff;
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        /* Sidebar Styling */
        .sidebar {
            background: var(--primary-bg);
            width: var(--sidebar-width);
            height: 100vh;
            color: #94a3b8;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
        }

        .sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

        .sidebar-brand {
            padding: 2rem 1.5rem;
            color: white;
            font-weight: 700;
            font-size: 1.25rem;
            letter-spacing: -0.025em;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .sidebar .nav-link {
            color: #94a3b8;
            padding: 0.85rem 1.25rem;
            margin: 0.25rem 1rem;
            border-radius: 12px;
            font-weight: 500;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.08);
        }

        .sidebar .nav-link.active {
            color: white;
            background: var(--primary-gradient);
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
        }

        .sidebar .nav-link i {
            font-size: 1.1rem;
        }

        /* Main Content Margin */
        main {
            margin-left: var(--sidebar-width);
            padding: 2.5rem;
            transition: margin-left 0.3s ease;
        }

        .main-header {
            margin-bottom: 2.5rem;
        }

        /* Table Styling */
        .custom-table {
            border-collapse: separate;
            border-spacing: 0;
        }

        .custom-table thead th {
            border-bottom: 2px solid #e2e8f0;
            font-weight: 600;
            color: var(--text-muted);
            padding-bottom: 1rem;
        }

        .custom-table tbody tr {
            transition: background-color 0.2s;
        }

        .custom-table tbody tr:hover {
            background-color: #f8fafc;
        }

        .custom-table td {
            padding: 1rem 0.5rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
        }

        /* Buttons Update */
        .btn-primary {
            background: var(--primary-gradient);
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2);
            transition: all 0.2s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(79, 70, 229, 0.3);
        }

        /* Mobile Menu Button */
        .mobile-menu-btn {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1050;
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: var(--primary-gradient);
            border: none;
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
            display: none;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

        .mobile-menu-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 16px rgba(79, 70, 229, 0.4);
        }

        .mobile-menu-btn i {
            font-size: 1.5rem;
        }

        /* Mobile Overlay */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .sidebar-overlay.show {
            opacity: 1;
        }

        /* Responsive */
        @media (max-width: 991.98px) {
            .mobile-menu-btn {
                display: flex;
            }

            .sidebar {
                transform: translateX(-100%);
                z-index: 1001;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .sidebar-overlay {
                display: block;
            }

            main {
                margin-left: 0;
                padding: 1.5rem;
                padding-top: 5rem;
            }
        }
    </style>
</head>

<body>
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn d-lg-none" id="mobileMenuBtn" aria-label="Toggle Menu">
        <i class="bi bi-list"></i>
    </button>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function () {
            const menuBtn = document.getElementById('mobileMenuBtn');
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const menuIcon = menuBtn?.querySelector('i');

            function toggleMenu() {
                sidebar?.classList.toggle('show');
                overlay?.classList.toggle('show');

                if (sidebar?.classList.contains('show')) {
                    menuIcon?.classList.remove('bi-list');
                    menuIcon?.classList.add('bi-x');
                    document.body.style.overflow = 'hidden';
                } else {
                    menuIcon?.classList.remove('bi-x');
                    menuIcon?.classList.add('bi-list');
                    document.body.style.overflow = '';
                }
            }

            menuBtn?.addEventListener('click', toggleMenu);
            overlay?.addEventListener('click', toggleMenu);

            // Close menu when clicking a link
            const navLinks = sidebar?.querySelectorAll('.nav-link');
            navLinks?.forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 992) {
                        toggleMenu();
                    }
                });
            });
        });
    </script>