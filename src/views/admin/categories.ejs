<%- include('../partials/header') %>
    <div class="container-fluid p-0">
        <%- include('../partials/sidebar', { activePage: 'categories' }) %>
            <main>
                <header class="main-header mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 fw-bold mb-0">Manage Categories</h1>
                            <p class="text-muted small mb-0">Organize your content by topics</p>
                        </div>
                        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                            <i class="bi bi-plus-lg me-2"></i>New Category
                        </button>
                    </div>
                </header>

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Name</th>
                                    <th>Slug</th>
                                    <th>Description</th>
                                    <th>Created At</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(cat=> { %>
                                    <tr id="row-<%= cat._id %>">
                                        <td class="ps-4 fw-bold">
                                            <%= cat.name %>
                                        </td>
                                        <td><code><%= cat.slug %></code></td>
                                        <td>
                                            <%= cat.description || 'N/A' %>
                                        </td>
                                        <td>
                                            <%= new Date(cat.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-outline-primary me-2" data-json="<%= JSON.stringify({id: cat._id, name: cat.name, slug: cat.slug, description: cat.description || ''}) %>" onclick="openEditCategoryModal(this)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deletecategory('<%= cat._id %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
    </div>

    <!-- Add Category Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/categories" method="POST">
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Name</label>
                            <input type="text" name="name" class="form-control" required placeholder="e.g. Technology">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Slug (Optional)</label>
                            <input type="text" name="slug" class="form-control" placeholder="e.g. technology">
                        </div>
                        <div class="mb-0">
                            <label class="form-label fw-bold small text-muted text-uppercase">Description</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-secondary px-4">Create Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Category Modal -->
    <div class="modal fade" id="editCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editCategoryForm">
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Name</label>
                            <input type="text" name="name" id="editCategoryName" class="form-control" required placeholder="e.g. Technology">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Slug (Optional)</label>
                            <input type="text" name="slug" id="editCategorySlug" class="form-control" placeholder="e.g. technology">
                        </div>
                        <div class="mb-0">
                            <label class="form-label fw-bold small text-muted text-uppercase">Description</label>
                            <textarea name="description" id="editCategoryDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-secondary px-4">Update Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
            async function deletecategory(id) {
                if (confirm('Are you sure you want to permanently delete this category?')) {
                    try {
                        const response = await fetch(`/admin/delete/categories/${id}`, {
                            method: 'DELETE',
                            headers: {
                                'Accept': 'application/json'
                            }
                        });
                        if (response.ok) {
                            const row = document.getElementById(`row-${id}`);
                            row.style.transition = 'all 0.4s ease';
                            row.style.opacity = '0';
                            row.style.transform = 'translateX(20px)';
                            setTimeout(() => row.remove(), 400);
                        } else {
                            const errorText = await response.text();
                            alert('Failed to delete category: ' + errorText);
                        }
                    } catch (err) {
                        console.error(err);
                        alert('An error occurred while deleting the story.');
                    }
                }
            }

            let currentEditCategoryId = null;

            function openEditCategoryModal(button) {
                const data = JSON.parse(button.dataset.json);
                currentEditCategoryId = data.id;
                document.getElementById('editCategoryName').value = data.name;
                document.getElementById('editCategorySlug').value = data.slug;
                document.getElementById('editCategoryDescription').value = data.description;
                const modal = new bootstrap.Modal(document.getElementById('editCategoryModal'));
                modal.show();
            }

            document.getElementById('editCategoryForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                const data = Object.fromEntries(formData);
                if (!data.name || data.name.trim() === '') {
                    alert('Category name is required.');
                    return;
                }
                try {
                    const response = await fetch(`/admin/update/categories/${currentEditCategoryId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
                    if (response.ok) {
                        alert('Category updated successfully!');
                        location.reload();
                    } else {
                        const errorText = await response.text();
                        alert('Failed to update category: ' + errorText);
                    }
                } catch (err) {
                    console.error(err);
                    alert('An error occurred while updating the category.');
                }
            });

        
        </script>


    <%- include('../partials/footer') %>