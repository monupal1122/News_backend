<% const activePage='account' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid p-0">
            <%- include('../partials/sidebar', { activePage }) %>

                <main>
                    <header class="main-header mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="h3 fw-bold mb-0">Account Settings</h1>
                                <p class="text-muted small mb-0">Manage your profile and security</p>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <div class="text-end d-none d-md-block">
                                    <div class="small fw-semibold">
                                        <%= admin.email %>
                                    </div>
                                    <div class="text-muted smaller">System Administrator</div>
                                </div>
                                <div class="rounded-circle bg-white shadow-sm p-2">
                                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </header>

                    <div class="row g-4">
                        <div class="col-lg-6">
                            <!-- Change Password Card -->
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-header bg-white py-3 border-0">
                                    <h5 class="fw-bold mb-0">Security</h5>
                                </div>
                                <div class="card-body p-4">
                                    <h6 class="fw-semibold mb-3">Change Password</h6>

                                    <% if (locals.success_msg && success_msg.length> 0) { %>
                                        <div class="alert alert-success alert-dismissible fade show border-0 rounded-3 mb-4"
                                            role="alert">
                                            <i class="bi bi-check-circle-fill me-2"></i>
                                            <%= success_msg %>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="alert"></button>
                                        </div>
                                        <% } %>

                                            <% if (locals.error_msg && error_msg.length> 0) { %>
                                                <div class="alert alert-danger alert-dismissible fade show border-0 rounded-3 mb-4"
                                                    role="alert">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                    <%= error_msg %>
                                                        <button type="button" class="btn-close"
                                                            data-bs-dismiss="alert"></button>
                                                </div>
                                                <% } %>

                                                    <form action="/admin/update-password" method="POST">
                                                        <div class="mb-3">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">Current
                                                                Password</label>
                                                            <div class="input-group">
                                                                <span
                                                                    class="input-group-text bg-light border-end-0 text-muted"><i
                                                                        class="bi bi-lock"></i></span>
                                                                <input type="password" name="currentPassword"
                                                                    class="form-control bg-light border-start-0"
                                                                    placeholder="••••••••" required>
                                                            </div>
                                                        </div>

                                                        <hr class="my-4 opacity-50">

                                                        <div class="mb-3">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">New
                                                                Password</label>
                                                            <div class="input-group">
                                                                <span
                                                                    class="input-group-text bg-light border-end-0 text-muted"><i
                                                                        class="bi bi-shield-lock"></i></span>
                                                                <input type="password" name="newPassword"
                                                                    class="form-control bg-light border-start-0"
                                                                    placeholder="••••••••" required minlength="8">
                                                            </div>
                                                            <div class="form-text smaller text-muted mt-2">
                                                                Must be at least 8 characters with letters and numbers.
                                                            </div>
                                                        </div>

                                                        <div class="mb-4">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">Confirm
                                                                New Password</label>
                                                            <div class="input-group">
                                                                <span
                                                                    class="input-group-text bg-light border-end-0 text-muted"><i
                                                                        class="bi bi-shield-check"></i></span>
                                                                <input type="password" name="confirmPassword"
                                                                    class="form-control bg-light border-start-0"
                                                                    placeholder="••••••••" required minlength="8">
                                                            </div>
                                                        </div>

                                                        <div class="d-grid mt-2">
                                                            <button type="submit"
                                                                class="btn btn-primary py-2 fw-bold rounded-3">
                                                                Update Security Credentials
                                                            </button>
                                                        </div>
                                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <!-- Profile Information Card -->
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-header bg-white py-3 border-0">
                                    <h5 class="fw-bold mb-0">System Profile</h5>
                                </div>
                                <div class="card-body p-4">
                                    <div class="text-center mb-4">
                                        <div class="avatar-big mx-auto mb-3">
                                            <i class="bi bi-person-circle display-4 text-primary"></i>
                                        </div>
                                        <h5 class="fw-bold mb-1">Administrator</h5>
                                        <p class="text-muted small">
                                            <%= admin.email %>
                                        </p>
                                    </div>

                                    <div class="list-group list-group-flush border-top">
                                        <div class="list-group-item px-0 py-3 bg-transparent border-bottom">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="small fw-bold text-muted text-uppercase mb-1">Role</div>
                                                    <div class="fw-semibold">System Super Admin</div>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">Active</span>
                                            </div>
                                        </div>
                                        <div class="list-group-item px-0 py-3 bg-transparent border-bottom">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="small fw-bold text-muted text-uppercase mb-1">Last
                                                        Password Change</div>
                                                    <div class="fw-semibold text-muted font-monospace">
                                                        <%= admin.passwordChangedAt ? new
                                                            Date(admin.passwordChangedAt).toLocaleString() : 'Never' %>
                                                    </div>
                                                </div>
                                                <i class="bi bi-clock-history text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="list-group-item px-0 py-3 bg-transparent border-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="small fw-bold text-muted text-uppercase mb-1">Member
                                                        Since</div>
                                                    <div class="fw-semibold text-muted">
                                                        <%= new Date(admin.createdAt).toLocaleDateString() %>
                                                    </div>
                                                </div>
                                                <i class="bi bi-calendar-event text-muted"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
        </div>

        <%- include('../partials/footer') %>