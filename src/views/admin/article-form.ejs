<% const activePage=mode==='edit' ? 'articles' : 'create' ; %>
    <%- include('../partials/header') %>

        <!-- Quill Editor CSS -->
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

        <div class="container-fluid p-0">
            <%- include('../partials/sidebar', { activePage }) %>

                <main>
                    <header class="main-header mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="h3 fw-bold mb-0 text-slate-800">
                                    <%= mode==='edit' ? 'Edit Story' : 'New Story' %>
                                </h1>
                                <p class="text-muted small mb-0">Craft and publish your next masterpiece</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="<%= admin.role === 'admin' ? '/admin/articles' : '/author/articles' %>"
                                    class="btn btn-light px-4">Exit</a>
                            </div>
                        </div>
                    </header>

                    <% if (locals.error) { %>
                        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <%= error %>
                        </div>
                        <% } %>

                            <% const portalPrefix=admin.role==='admin' ? '/admin' : '/author' ; %>
                                <form id="articleForm"
                                    action="<%= portalPrefix %>/articles<%= mode === 'edit' ? '/' + article._id : '' %>"
                                    method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="content" id="contentInput">
                                    <div class="row g-4">
                                        <div class="col-lg-8">
                                            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                                                <div class="mb-4">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Headline</label>
                                                    <input type="text"
                                                        class="form-control form-control-lg border-0 bg-light rounded-3"
                                                        name="title" id="titleInput"
                                                        value="<%= article ? article.title : '' %>"
                                                        placeholder="Enter a catchy title..." required>
                                                </div>

                                                <div class="mb-4">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <label
                                                            class="form-label fw-bold text-muted small text-uppercase mb-0">URL
                                                            Slug (SEO Friendly)</label>
                                                        <button type="button" id="generateSlugBtn"
                                                            class="btn btn-sm btn-outline-secondary border-0 text-[10px] font-black uppercase tracking-widest p-0">
                                                            <i class="bi bi-link-45deg me-1 text-primary"></i> Auto
                                                            Generate Slug
                                                        </button>
                                                    </div>
                                                    <div class="input-group">
                                                        <span
                                                            class="input-group-text border-0 bg-light text-muted small font-monospace">/</span>
                                                        <input type="text"
                                                            class="form-control border-0 bg-light rounded-end-3"
                                                            name="slug" id="slugInput"
                                                            value="<%= article ? article.slug : '' %>"
                                                            placeholder="my-meaningful-slug">
                                                    </div>
                                                    <p class="text-[10px] text-muted mt-2 ps-1">Lower-case keywords,
                                                        hyphens only. Example: news-story-title</p>
                                                </div>

                                                <div class="mb-4">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Summary</label>
                                                    <textarea class="form-control border-0 bg-light rounded-3"
                                                        name="summary" rows="3"
                                                        placeholder="Briefly describe what this story is about..."
                                                        required><%= article ? article.summary : '' %></textarea>
                                                </div>

                                                <div class="mb-4">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <label
                                                            class="form-label fw-bold text-muted small text-uppercase mb-0">Tags
                                                            (Comma separated)</label>
                                                        <button type="button" id="suggestTagsBtn"
                                                            class="btn btn-sm btn-outline-secondary border-0 text-[10px] font-black uppercase tracking-widest p-0">
                                                            <i class="bi bi-stars me-1 text-warning"></i> Suggest AI
                                                            Tags
                                                        </button>
                                                    </div>
                                                    <input type="text" class="form-control border-0 bg-light rounded-3"
                                                        name="tags" id="tagsInput"
                                                        value="<%= article && article.tags ? (Array.isArray(article.tags) ? article.tags.join(', ') : article.tags) : '' %>"
                                                        placeholder="e.g. tech, future, ai">
                                                    <div id="tagsLoader"
                                                        class="spinner-border spinner-border-sm text-secondary d-none mt-2"
                                                        role="status"></div>
                                                </div>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Full
                                                        Story</label>
                                                    <div id="editor" style="height: 400px;" class="rounded-3 bg-white">
                                                        <%- article ? article.content : '' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-4">
                                            <div class="glass-card p-4 sticky-top" style="top: 100px;">
                                                <h5 class="fw-bold mb-4">Publishing Settings</h5>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Status</label>
                                                    <select class="form-select border-0 bg-light" name="publishStatus">
                                                        <option value="draft" <%=article &&
                                                            article.publishStatus==='draft' ? 'selected' : '' %>>Draft
                                                        </option>
                                                        <option value="pending" <%=article &&
                                                            article.publishStatus==='pending' ? 'selected' : '' %>
                                                            >Pending
                                                            Review</option>
                                                        <option value="published" <%=article &&
                                                            article.publishStatus==='published' ? 'selected' : '' %>
                                                            >Published</option>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Category</label>
                                                    <select class="form-select border-0 bg-light" name="category"
                                                        id="categorySelect" required>
                                                        <option value="">Select Category</option>
                                                        <% categories.forEach(cat=> { %>
                                                            <option value="<%= cat._id %>" <%=article &&
                                                                article.category && (article.category._id ||
                                                                article.category).toString()===cat._id.toString()
                                                                ? 'selected' : '' %>>
                                                                <%= cat.name %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Subcategories</label>
                                                    <select class="form-select border-0 bg-light" name="subcategories"
                                                        id="subcategorySelect" multiple required size="5">
                                                        <option value="" disabled>Select Subcategories (Hold Ctrl/Cmd)
                                                        </option>
                                                        <% if (locals.subcategories) { %>
                                                            <% subcategories.forEach(sub=> { %>
                                                                <option value="<%= sub._id %>" <%=article &&
                                                                    article.subcategories &&
                                                                    (article.subcategories.some(s=> (s._id ||
                                                                    s).toString() === sub._id.toString()))
                                                                    ? 'selected' : '' %>>
                                                                    <%= sub.name %>
                                                                </option>
                                                                <% }) %>
                                                                    <% } %>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Author</label>
                                                    <% if (admin.role==='admin' && typeof authors !=='undefined' &&
                                                        authors.length> 0) { %>
                                                        <select class="form-select border-0 bg-light" name="author">
                                                            <% authors.forEach(a=> { %>
                                                                <option value="<%= a._id %>" <%=(article &&
                                                                    article.author && (article.author._id ||
                                                                    article.author).toString()===a._id.toString()) ||
                                                                    (!article &&
                                                                    admin._id.toString()===a._id.toString())
                                                                    ? 'selected' : '' %>>
                                                                    <%= a.name || a.email %>
                                                                </option>
                                                                <% }) %>
                                                        </select>
                                                        <% } else { %>
                                                            <input type="text" class="form-control border-0 bg-light"
                                                                value="<%= article && article.author ? (article.author.name || article.author.email) : admin.name %>"
                                                                disabled>
                                                            <input type="hidden" name="author"
                                                                value="<%= article && article.author ? article.author._id : admin._id %>">
                                                            <% } %>
                                                </div>

                                                <div class="mb-4">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Cover
                                                        Image</label>
                                                    <div
                                                        class="image-upload-wrapper rounded-3 bg-light p-3 text-center border-2 border-dashed border-secondary border-opacity-25">
                                                        <% if (article && article.featuredImage) { %>
                                                            <img src="<%= article.featuredImage %>"
                                                                class="img-fluid rounded mb-3 shadow-sm"
                                                                id="previewImg">
                                                            <% } %>
                                                                <input type="file" class="form-control" name="image"
                                                                    accept="image/*" id="imageInput">
                                                                <p class="text-muted small mt-2 mb-0">Drag & drop or
                                                                    click
                                                                    to upload</p>
                                                    </div>
                                                </div>

                                                <div
                                                    class="form-check form-switch mb-4 p-0 ps-5 d-flex align-items-center gap-3">
                                                    <input class="form-check-input ms-0" type="checkbox" id="isFeatured"
                                                        name="isFeatured" value="true" <%=article && article.isFeatured
                                                        ? 'checked' : '' %>>
                                                    <label class="form-check-label fw-bold" for="isFeatured">Mark as
                                                        Featured</label>
                                                </div>

                                                <hr>

                                                <div class="mb-3">
                                                    <label
                                                        class="form-label fw-bold text-muted small text-uppercase">Source
                                                        Info (Optional)</label>
                                                    <input type="text" class="form-control border-0 bg-light mb-2"
                                                        name="sourceName" placeholder="Source Name"
                                                        value="<%= article ? article.sourceName : '' %>">
                                                    <input type="url" class="form-control border-0 bg-light"
                                                        name="sourceUrl" placeholder="Source URL"
                                                        value="<%= article ? article.sourceUrl : '' %>">
                                                </div>

                                                <button type="submit" class="btn btn-secondary w-100 py-3 mt-2">
                                                    <%= mode==='edit' ? 'Save Changes' : 'Publish Story' %>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                </main>
        </div>

        <!-- Quill Editor JS -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script>
            const quill = new Quill('#editor', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        ['blockquote', 'code-block'],
                        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                        ['link', 'image'],
                        ['clean']
                    ]
                }
            });

            const form = document.querySelector('#articleForm');
            form.onsubmit = function () {
                // Populate the hidden input with editor content
                const contentInput = document.querySelector('#contentInput');
                contentInput.value = quill.root.innerHTML;
                return true;
            };

            // Simple image preview logic
            document.querySelector('#imageInput').onchange = function (e) {
                const [file] = e.target.files;
                if (file) {
                    let preview = document.querySelector('#previewImg');
                    if (!preview) {
                        preview = document.createElement('img');
                        preview.id = 'previewImg';
                        preview.className = 'img-fluid rounded mb-3 shadow-sm';
                        document.querySelector('.image-upload-wrapper').prepend(preview);
                    }
                    preview.src = URL.createObjectURL(file);
                }
            };
            // Dynamic subcategory loading
            const categorySelect = document.querySelector('#categorySelect');
            const subcategorySelect = document.querySelector('#subcategorySelect');

            categorySelect.addEventListener('change', async (e) => {
                const categoryId = e.target.value;
                subcategorySelect.innerHTML = '<option value="" disabled>Select Subcategories (Hold Ctrl/Cmd)</option>';

                if (!categoryId) return;

                try {
                    const response = await fetch(`/api/categories/${categoryId}/subcategories`);
                    const subcategories = await response.json();

                    subcategories.forEach(sub => {
                        const option = document.createElement('option');
                        option.value = sub._id;
                        option.textContent = sub.name;
                        subcategorySelect.appendChild(option);
                    });
                } catch (error) {
                    console.error('Error fetching subcategories:', error);
                }
            });

            // AI Tag Suggestion Logic
            const suggestTagsBtn = document.querySelector('#suggestTagsBtn');
            const tagsInput = document.querySelector('#tagsInput');
            const tagsLoader = document.querySelector('#tagsLoader');
            const titleInput = document.querySelector('input[name="title"]');
            const summaryInput = document.querySelector('textarea[name="summary"]');

            suggestTagsBtn.addEventListener('click', async () => {
                const title = titleInput.value;
                const summary = summaryInput.value;

                if (!title) {
                    alert('Please enter a title first to get suggestions.');
                    return;
                }

                suggestTagsBtn.disabled = true;
                tagsLoader.classList.remove('d-none');

                try {
                    const response = await fetch('/admin/articles/suggest-tags', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ title, summary })
                    });
                    const data = await response.json();

                    if (data.tags && data.tags.length > 0) {
                        const existingTags = tagsInput.value ? tagsInput.value.split(',').map(t => t.trim()) : [];
                        const newTags = [...new Set([...existingTags, ...data.tags])].filter(Boolean);
                        tagsInput.value = newTags.join(', ');
                    } else {
                        alert('No suggestions found. Try adding more detail to the title.');
                    }
                } catch (error) {
                    console.error('Error suggesting tags:', error);
                    alert('Failed to get suggestions. Please try again.');
                } finally {
                    suggestTagsBtn.disabled = false;
                    tagsLoader.classList.add('d-none');
                }
            });

            // Auto Generate Slug Logic
            const generateSlugBtn = document.querySelector('#generateSlugBtn');
            const slugInput = document.querySelector('#slugInput');

            generateSlugBtn.addEventListener('click', async () => {
                const title = titleInput.value;
                if (!title) {
                    alert('Please enter a headline first to generate a slug.');
                    return;
                }

                generateSlugBtn.disabled = true;
                const originalContent = generateSlugBtn.innerHTML;
                generateSlugBtn.innerHTML = '<i class="spinner-border spinner-border-sm me-1"></i> Generating...';

                try {
                    const response = await fetch('/admin/articles/generate-slug', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ title })
                    });
                    const data = await response.json();

                    if (data.slug) {
                        slugInput.value = data.slug;
                    }
                } catch (error) {
                    console.error('Error generating slug:', error);
                } finally {
                    generateSlugBtn.disabled = false;
                    generateSlugBtn.innerHTML = originalContent;
                }
            });
        </script>

        <style>
            .ql-toolbar.ql-snow {
                border: none;
                background: #f8fafc;
                border-bottom: 1px solid #e2e8f0;
                border-radius: 8px 8px 0 0;
            }

            .ql-container.ql-snow {
                border: none;
                font-family: 'Inter', sans-serif;
                font-size: 1rem;
            }

            .text-slate-800 {
                color: #1e293b;
            }
        </style>

        <%- include('../partials/footer') %>