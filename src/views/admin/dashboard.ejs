<% const activePage='dashboard' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid p-0">
            <%- include('../partials/sidebar', { activePage }) %>

                <main>
                    <header class="main-header mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="h3 fw-bold mb-0">Platform Overview</h1>
                                <p class="text-muted small mb-0">Analytics for the last 30 days</p>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <div class="text-end d-none d-md-block">
                                    <div class="small fw-semibold">
                                        <%= admin.email %>
                                    </div>
                                    <div class="text-muted smaller">System Administrator</div>
                                </div>
                                <div class="rounded-circle bg-white shadow-sm p-2">
                                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </header>

                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 bg-primary bg-opacity-10 p-3">
                                        <i class="bi bi-file-earmark-richtext text-primary fs-3"></i>
                                    </div>
                                    <span class="badge bg-success bg-opacity-10 text-success">+12%</span>
                                </div>
                                <h6 class="text-muted fw-medium mb-1">Total Published</h6>
                                <h2 class="fw-bold mb-0 text-slate-800">
                                    <%= articleCount %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 bg-warning bg-opacity-10 p-3">
                                        <i class="bi bi-star-fill text-warning fs-3"></i>
                                    </div>
                                    <span class="badge bg-warning bg-opacity-10 text-warning">Featured</span>
                                </div>
                                <h6 class="text-muted fw-medium mb-1">Curated Stories</h6>
                                <h2 class="fw-bold mb-0 text-slate-800">
                                    <%= featuredCount %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 bg-info bg-opacity-10 p-3">
                                        <i class="bi bi-graph-up-arrow text-info fs-3"></i>
                                    </div>
                                    <span class="badge bg-info bg-opacity-10 text-info">Live</span>
                                </div>
                                <h6 class="text-muted fw-medium mb-1">Total Engagement</h6>
                                <h2 class="fw-bold mb-0 text-slate-800">
                                    <%= totalViews.toLocaleString() %>
                                </h2>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-lg-8">
                            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                                <div
                                    class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                                    <h5 class="fw-bold mb-0">Recent Activity</h5>
                                    <a href="/admin/articles"
                                        class="btn btn-link btn-sm text-decoration-none fw-semibold">View All</a>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0 custom-table">
                                        <thead>
                                            <tr>
                                                <th class="ps-4">Article Detail</th>
                                                <th>Category</th>
                                                <th>Engagement</th>
                                                <th class="pe-4">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% latestArticles.forEach(article=> { %>
                                                <tr>
                                                    <td class="ps-4">
                                                        <div class="d-flex align-items-center">
                                                            <% if(article.imageUrl) { %>
                                                                <img src="<%= article.imageUrl %>"
                                                                    class="rounded-2 me-3" width="48" height="48"
                                                                    style="object-fit: cover;">
                                                                <% } else { %>
                                                                    <div class="rounded-2 me-3 bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center"
                                                                        width="48" height="48">
                                                                        <i class="bi bi-image text-muted"></i>
                                                                    </div>
                                                                    <% } %>
                                                                        <div>
                                                                            <div class="fw-semibold text-truncate"
                                                                                style="max-width: 250px;">
                                                                                <%= article.title %>
                                                                            </div>
                                                                            <small class="text-muted">
                                                                                <%= new
                                                                                    Date(article.createdAt).toLocaleDateString()
                                                                                    %>
                                                                            </small>
                                                                        </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-light text-dark border">
                                                            <%= article.category ? article.category.name
                                                                : 'Uncategorized' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center gap-1">
                                                            <i class="bi bi-eye text-muted"></i>
                                                            <span class="small fw-medium">
                                                                <%= article.viewCount %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td class="pe-2 mb-10">
                                                        <div class="dropdown">
                                                            <button class="btn btn-light btn-sm rounded-circle"
                                                                type="button" data-bs-toggle="dropdown">
                                                                <i class="bi bi-three-dots-vertical"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                                                <li><a class="dropdown-item"
                                                                        href="/admin/articles/edit/<%= article._id %>"><i
                                                                            class="bi bi-pencil me-2"></i> Edit</a></li>
                                                                <li>
                                                                    <hr class="dropdown-divider">
                                                                </li>
                                                                <li><button class="dropdown-item text-danger"
                                                                        onclick="deleteArticle('<%= article._id %>')"><i
                                                                            class="bi bi-trash me-2"></i>
                                                                        Delete</button></li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="glass-card p-4 h-100">
                                <h5 class="fw-bold mb-4">Quick Actions</h5>
                                <div class="d-grid gap-3">
                                    <a href="/admin/articles/create" class="btn btn-secondary py-3">
                                        <i class="bi bi-plus-lg me-2"></i> Draft New Story
                                    </a>
                                    <button class="btn  py-3" onclick="window.location.reload()">
                                        <i class="bi bi-arrow-repeat me-2"></i> Refresh Analytics
                                        </a>
                                        <div class="mt-4">
                                            <h6 class="fw-bold small text-uppercase text-muted mb-3">System Health</h6>
                                            <div class="d-flex align-items-center justify-content-between mb-2">
                                                <small>API Latency</small>
                                                <small class="text-success fw-bold">24ms</small>
                                            </div>
                                            <div class="progress" style="height: 4px;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                    style="width: 100%"></div>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
        </div>

        <script>
            async function deleteArticle(id) {
                if (confirm('Are you sure you want to delete this article?')) {
                    try {
                        const response = await fetch(`/admin/articles/${id}`, {
                            method: 'DELETE',
                            headers: {
                                'Accept': 'application/json'
                            }
                        });
                        if (response.ok) {
                            window.location.reload();
                        } else {
                            alert('Failed to delete article');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('An error occurred');
                    }
                }
            }
        </script>

        <%- include('../partials/footer') %>