<% const activePage='dashboard' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid p-0">
            <%- include('../partials/sidebar', { activePage }) %>

                <main>
                    <header class="main-header d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 fw-bold mb-1">Author Dashboard</h1>
                            <p class="text-muted small mb-0">Welcome back, <%= admin.name %>! Tracking your story
                                    performance.</p>
                        </div>
                        <div class="d-flex gap-3">
                            <a href="/author/articles/create" class="btn btn-primary">
                                <i class="bi bi-feather me-2"></i>Write New Story
                            </a>
                        </div>
                    </header>

                    <!-- Stats Cards -->
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 bg-indigo-50 p-3" style="background: #e0e7ff;">
                                        <i class="bi bi-journal-text text-primary fs-4"></i>
                                    </div>
                                    <span class="badge bg-blue-50 text-primary rounded-pill px-3 py-2"
                                        style="background: #e0f2fe; color: #0369a1;">My Stories</span>
                                </div>
                                <h3 class="fw-bold mb-1">
                                    <%= articleCount %>
                                </h3>
                                <p class="text-muted small mb-0">Total Contributions</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 p-3" style="background: #fef9c3;">
                                        <i class="bi bi-award-fill text-warning fs-4" style="color: #ca8a04;"></i>
                                    </div>
                                    <span class="badge rounded-pill px-3 py-2"
                                        style="background: #fef9c3; color: #854d0e;">Front Page</span>
                                </div>
                                <h3 class="fw-bold mb-1">
                                    <%= featuredCount %>
                                </h3>
                                <p class="text-muted small mb-0">Featured Stories</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="rounded-3 p-3" style="background: #fdf2f8;">
                                        <i class="bi bi-graph-up-arrow text-danger fs-4" style="color: #db2777;"></i>
                                    </div>
                                    <span class="badge rounded-pill px-3 py-2"
                                        style="background: #fdf2f8; color: #9d174d;">Reach</span>
                                </div>
                                <h3 class="fw-bold mb-1">
                                    <%= totalViews.toLocaleString() %>
                                </h3>
                                <p class="text-muted small mb-0">Total Readers</p>
                            </div>
                        </div>
                    </div>

                    <!-- Charts & Top Articles -->
                    <div class="row g-4 mb-5">
                        <div class="col-lg-8">
                            <div class="glass-card p-4 h-100">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="fw-bold mb-0">My Publishing Activity</h5>
                                    <span class="text-muted small">Last 7 days</span>
                                </div>
                                <canvas id="trafficChart" height="300" style="max-height: 300px;"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="glass-card p-4 h-100">
                                <h5 class="fw-bold mb-4">Top Performing</h5>
                                <div class="d-flex flex-column gap-3">
                                    <% if (locals.topArticles && topArticles.length> 0) { %>
                                        <% topArticles.forEach((article, index)=> { %>
                                            <div class="d-flex align-items-center justify-content-between p-3 rounded-3"
                                                style="background: #f8fafc;">
                                                <div class="d-flex align-items-center gap-3 overflow-hidden">
                                                    <span class="fw-bold" style="color: #cbd5e1; font-size: 1.2rem;">#
                                                        <%= index + 1 %>
                                                    </span>
                                                    <div class="text-truncate fw-medium"
                                                        style="color: var(--text-main);">
                                                        <%= article.title %>
                                                    </div>
                                                </div>
                                                <span class="badge bg-white shadow-sm text-dark border">
                                                    <%= article.viewCount %>
                                                </span>
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <p class="text-muted small text-center my-4">No data available yet
                                                    </p>
                                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activity Table -->
                    <div class="glass-card overflow-hidden">
                        <div class="p-4 border-bottom border-light">
                            <h5 class="fw-bold mb-0">Recent Drafts & Stories</h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table custom-table mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4">Article</th>
                                        <th>Category</th>
                                        <th>Date</th>
                                        <th>Views</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% latestArticles.forEach(article=> { %>
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center gap-3">
                                                    <% if(article.imageUrl) { %>
                                                        <img src="<%= article.imageUrl %>" class="rounded-3 shadow-sm"
                                                            width="40" height="40" style="object-fit: cover;">
                                                        <% } else { %>
                                                            <div class="rounded-3 bg-light d-flex align-items-center justify-content-center"
                                                                style="width: 40px; height: 40px;">
                                                                <i class="bi bi-image text-muted"></i>
                                                            </div>
                                                            <% } %>
                                                                <span class="fw-medium text-truncate"
                                                                    style="max-width: 200px;">
                                                                    <%= article.title %>
                                                                </span>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-light text-secondary border">
                                                    <%= article.category ? article.category.name : '-' %>
                                                </span></td>
                                            <td class="text-muted small">
                                                <%= new Date(article.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <%= article.viewCount %>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-light border-0" type="button"
                                                        data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                                        <li><a class="dropdown-item"
                                                                href="/author/articles/edit/<%= article._id %>">Edit
                                                                Story</a>
                                                        </li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li><button class="dropdown-item text-danger"
                                                                onclick="deleteArticle('<%= article._id %>')">Discard</button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </main>
        </div>

        <script>
            // Chart.js Initialization
            document.addEventListener('DOMContentLoaded', function () {
                const ctx = document.getElementById('trafficChart');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: <% - JSON.stringify(locals.chartData ? chartData.labels : []) %>,
                            datasets: [{
                                label: 'My Articles',
                                data: <% - JSON.stringify(locals.chartData ? chartData.data : []) %>,
                                borderColor: '#4f46e5',
                                backgroundColor: (context) => {
                                    const ctx = context.chart.ctx;
                                    const gradient = ctx.createLinearGradient(0, 0, 0, 300);
                                    gradient.addColorStop(0, 'rgba(79, 70, 229, 0.2)');
                                    gradient.addColorStop(1, 'rgba(79, 70, 229, 0.0)');
                                    return gradient;
                                },
                                borderWidth: 3,
                                pointBackgroundColor: '#ffffff',
                                pointBorderColor: '#4f46e5',
                                pointBorderWidth: 2,
                                pointRadius: 4,
                                pointHoverRadius: 6,
                                fill: true,
                                tension: 0.4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    backgroundColor: '#1e1b4b',
                                    padding: 12,
                                    titleFont: { size: 13 },
                                    bodyFont: { size: 13 },
                                    cornerRadius: 8,
                                    displayColors: false
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: '#f1f5f9',
                                        borderDash: [5, 5]
                                    },
                                    ticks: { font: { size: 11, family: "'Inter', sans-serif" }, color: '#94a3b8' }
                                },
                                x: {
                                    grid: { display: false },
                                    ticks: { font: { size: 11, family: "'Inter', sans-serif" }, color: '#94a3b8' }
                                }
                            }
                        }
                    });
                }
            });

            async function deleteArticle(id) {
                if (confirm('Are you sure you want to permanently discard this story?')) {
                    try {
                        const response = await fetch(`/author/articles/${id}`, {
                            method: 'DELETE',
                            headers: { 'Accept': 'application/json' }
                        });
                        if (response.ok) window.location.reload();
                        else alert('Failed to discard story.');
                    } catch (err) {
                        console.error(err);
                        alert('Error occurred.');
                    }
                }
            }
        </script>

        <%- include('../partials/footer') %>